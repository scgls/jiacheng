@using BILBasic.Common;
@using BILWeb.LandMark;
@model T_LandMarkInfo
@{
    Layout = "~/Views/Shared/_LayoutLayui.cshtml";
    PageData<T_LandMarkInfo> pageData = (PageData<T_LandMarkInfo>)ViewData["PageData"];

}

<div class="box">
    <div class="layui-card-body layui-table-body layui-table-main">
        <form action="/Landmark/GetModelList" method="post">
            <div class="layui-card-body ">
                <div class="layui-inline layui-show-xs-block">
                    @Html.EditorFor(model => model.LandMarkNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "地标号" } })
                </div>
                <div class="layui-inline layui-show-xs-block">
                    <button type="submit" class="btn btn-primary" lay-submit="" lay-filter="sreach"><i class="layui-icon">&#xe615;</i></button>
                </div>
            </div>
        </form>
        @{Html.RenderPartial("~/Views/Shared/_ViewButtom.cshtml");}
        <table class="layui-table layui-form">
            <thead>
                <tr>
                    @*<th>选择</th>*@
                    <th>@Html.DisplayNameFor(model => model.LandMarkNo)</th>
                    <th>@Html.DisplayNameFor(model => model.Remark)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (pageData.data != null && pageData.data.Count != 0)
                    {
                        foreach (T_LandMarkInfo t_LandMarkInfo in pageData.data)
                        {
                            <tr>
                                <td>@t_LandMarkInfo.LandMarkNo</td>
                                <td>@t_LandMarkInfo.Remark</td>
                                @*<td>
                                        <a title="编辑" href="/landmark/getmodel?ID=@t_LandMarkInfo.ID">
                                            <i class="layui-icon">&#xe642;</i>
                                        </a>
                                    </td>*@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="13" align="center"><b>无查询数据</b></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        @{Html.RenderAction("PageView", pageData);}
    </div>
</div>

<script src="~/Content/SCG/js/Common/Operate.js"></script>

