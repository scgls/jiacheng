                @*<div class="layui-inline layui-show-xs-block">
            @Html.DropDownList("VoucherType", Commom.GetList("cbxOutStockVoucherName") as IEnumerable<SelectListItem>, new { htmlAttributes = new { @class = "form-control" }, disabled = "disabled" })
        </div>*@
                <div class="layui-inline layui-show-xs-block">
